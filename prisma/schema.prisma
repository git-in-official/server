generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

enum Provider {
  google
  apple
}

model User {
  id         String   @id @default(uuid())
  provider   Provider
  providerId String
  name       String
  Poem       Poem[]

  @@unique([provider, providerId])
}

model Poem {
  id          String   @id @default(uuid())
  title       String
  textAlign   String
  textSize    String
  textFont    String
  content     String
  tags        String[]
  isRecorded  Boolean
  isPublished Boolean?

  authorId String
  author   User   @relation(fields: [authorId], references: [id])
}
